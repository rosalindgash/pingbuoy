{
  "name": "website-monitoring-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 4000",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:security": "eslint . --ext .ts,.tsx,.js,.jsx --config .eslintrc.security.json",
    "security-check": "node scripts/security-check.js",
    "test:redis": "node scripts/test-redis.js",
    "health:redis": "curl -s http://localhost:4000/api/health/redis | jq || curl -s http://localhost:4000/api/health/redis",
    "pre-deploy": "npm run security-check && npm run lint && npm audit",
    "build:secure": "npm run pre-deploy && npm run build",
    "deps:audit": "npm audit --audit-level=moderate",
    "deps:audit-fix": "npm audit fix",
    "deps:outdated": "npm outdated",
    "deps:update": "npm update",
    "deps:licenses": "npx license-checker --summary",
    "deps:security-report": "npm audit --json > security-audit.json && echo 'Security report generated: security-audit.json'"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@stripe/stripe-js": "^7.9.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.57.2",
    "@types/nodemailer": "^7.0.1",
    "@upstash/redis": "^1.35.4",
    "@vercel/functions": "^3.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.6",
    "jose": "^6.1.0",
    "jsdom": "^27.0.0",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "next-auth": "^4.24.11",
    "nodemailer": "^6.10.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "recharts": "^3.1.2",
    "resend": "^6.0.3",
    "sonner": "^2.0.7",
    "stripe": "^18.5.0",
    "tailwind-merge": "^3.3.1",
    "validator": "^13.15.15",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.19.13",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/validator": "^13.15.3",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-security": "^3.0.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
