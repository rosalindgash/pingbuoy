{
  "name": "pingbuoy-waf-config",
  "description": "WAF configuration for PingBuoy application security",
  "version": "1.0.0",
  "config": {
    "blocked_user_agents": [
      "bot",
      "crawler",
      "spider",
      "scraper",
      "scanner",
      "curl",
      "wget",
      "python-requests",
      "python-urllib",
      "go-http-client",
      "http_request",
      "libwww-perl",
      "php",
      "java",
      "okhttp",
      "apache-httpclient",
      "nikto",
      "sqlmap",
      "nessus",
      "openvas",
      "nmap",
      "masscan",
      "nuclei",
      "gobuster",
      "dirb",
      "wpscan",
      "burpsuite",
      "metasploit",
      "postman",
      "insomnia",
      "httpie",
      "selenium",
      "puppeteer",
      "playwright",
      "headlesschrome",
      "phantomjs"
    ],
    "blocked_paths": [
      "/wp-admin",
      "/wp-login",
      "/wp-content",
      "/wp-includes",
      "/xmlrpc.php",
      "/admin/login",
      "/administrator",
      "/login.php",
      "/admin.php",
      "/.env",
      "/.git",
      "/config.php",
      "/database.yml",
      "/phpinfo.php",
      "/info.php",
      "/test.php",
      "/shell.php",
      "/backup",
      "/dump.sql",
      "/.DS_Store"
    ],
    "sql_injection_patterns": [
      "union.*select",
      "select.*from",
      "insert.*into",
      "delete.*from",
      "drop.*table",
      "or.*1=1",
      "and.*1=1",
      "'.*or.*'",
      "exec.*xp_",
      "sp_.*password"
    ],
    "xss_patterns": [
      "<script",
      "javascript:",
      "vbscript:",
      "onload=",
      "onerror=",
      "onclick=",
      "alert(",
      "document.cookie",
      "window.location"
    ],
    "rate_limits": {
      "requests_per_minute": 100,
      "burst_allowance": 20,
      "window_minutes": 5
    },
    "high_risk_countries": [
      "CN",
      "RU",
      "KP",
      "IR"
    ],
    "allowed_bots": [
      "googlebot",
      "bingbot",
      "slurp",
      "duckduckbot",
      "baiduspider",
      "facebookexternalhit",
      "twitterbot",
      "linkedinbot",
      "pingdom",
      "uptime",
      "monitor"
    ],
    "sensitive_endpoints": [
      "/api/checkout",
      "/api/billing",
      "/api/sites",
      "/api/user",
      "/api/notification-settings"
    ],
    "whitelist_ips": [
      "127.0.0.1",
      "::1"
    ],
    "security_settings": {
      "require_user_agent": true,
      "min_user_agent_length": 10,
      "max_url_length": 2000,
      "block_empty_referer_for_sensitive_endpoints": true,
      "enable_geo_blocking": false,
      "log_all_requests": false,
      "log_blocked_requests": true
    }
  }
}