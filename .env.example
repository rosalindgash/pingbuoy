# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# ❌ DEPRECATED - Remove service_role_key (security risk)
# SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ✅ NEW - Secure JWT-based service authentication
SERVICE_JWT_SECRET=your_secure_jwt_secret_at_least_32_characters

# Stripe Configuration
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_PRO_MONTHLY_PRICE_ID=your_stripe_pro_monthly_price_id

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:4000
APP_URL=http://localhost:4000
API_BASE_URL=http://localhost:4000

# Resend Configuration (for notifications)
RESEND_API_KEY=your_resend_api_key


# Redis Configuration (for rate limiting and webhook deduplication)
# Get free Redis at: https://upstash.com
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token

# Security Configuration - CORS Origins
# IMPORTANT: Set this for each environment to prevent CORS attacks
# Development:  ALLOWED_ORIGINS=http://localhost:3000
# Preview:      ALLOWED_ORIGINS=https://your-preview-domain.vercel.app
# Production:   ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
ALLOWED_ORIGINS=http://localhost:3000

# Log Security Monitoring (Production)
# Webhook URL for security alert notifications (Slack, Discord, PagerDuty, etc.)
LOG_SECURITY_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# Log level for production (error, warn, info, debug)
LOG_LEVEL=error

# Environment
NODE_ENV=production